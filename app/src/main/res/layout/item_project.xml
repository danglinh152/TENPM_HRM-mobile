<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_account"
    android:padding="6dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="3dp"
    >

    <!-- Tên dự án -->
    <TextView
        android:id="@+id/tvProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Tên dự án"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Icon chi tiết dự án -->
    <ImageView
        android:id="@+id/ivProjectDetail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivProjectDelete"
        android:src="@drawable/account_detail" />

    <!-- Tên người tham gia dự án -->
    <TextView
        android:id="@+id/tvProjectParticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProjectName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="Tên người tham gia"
        android:textColor="#000"
        android:textSize="14sp" />

    <!-- Trạng thái dự án -->
    <TextView
        android:id="@+id/tvProjectStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/tvProjectParticipant"
        android:layout_marginTop="15dp"
        android:background="@drawable/manager_type_shape"
        android:text="Trạng thái dự án"
        android:textColor="#F47271"
        android:textSize="14sp" />

    <!-- Icon xóa dự án -->
    <ImageView
        android:id="@+id/ivProjectDelete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/tvProjectStatus"
        android:layout_toStartOf="@+id/ivProjectDetail"
        android:src="@android:drawable/ic_menu_delete" />
</RelativeLayout>
